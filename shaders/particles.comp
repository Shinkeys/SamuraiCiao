#version 460 core


layout (local_size_x = 1, local_size_y = 1,  local_size_z = 1) in;

layout(std430, binding = 1) buffer Vertices
{
    vec4 vertices[];
};


void main()
{
    uint idx = gl_GlobalInvocationID.x;


    vec3 newPos = vertices[idx].xyz;

    newPos += vec3(0.1);

    
    vertices[idx].xyz = newPos;
}